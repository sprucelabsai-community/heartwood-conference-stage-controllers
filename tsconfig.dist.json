{
    "compilerOptions": {
		"skipLibCheck": true,
        "module": "es2015",
        "target": "ES2020",
		"lib": [
			"DOM",
			"ES2022"
		],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "outDir": "./build",
        "baseUrl": "src",
        "experimentalDecorators": true,
		"paths": {
			"#spruce/*": [".spruce/*"]
		}
    },
    "include": [
        "./*.ts",
        "./**/*.ts",
        "./src/.spruce/**/*"
    ],
    "exclude": [
        "**/node_modules/*",
        "build/*",
        "esm/*"
    ]
}
